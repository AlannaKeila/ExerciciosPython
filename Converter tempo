segundos_str = input("Por favor, entre com o nÃºmero de segundos que deseja converter:")
total_segs = int(segundos_str)

horas = total_segs//3600
segs_restante = total_segs % 3600
minutos = segs_restante // 60
segs_restante_final = segs_restante % 60

print(horas,"horas",minutos,"minutos e",segs_restante_final,"segundos")
